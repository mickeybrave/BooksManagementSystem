@model BooksManagementSystem.Models.BorrowingViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit or return book</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class="form-control" asp-items="@(IEnumerable<SelectListItem>)@ViewData["Books"]" id="Books" hidden></select>
                <input class="form-control" readonly value="@ViewData["Book"]" />
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="@(IEnumerable<SelectListItem>)@ViewData["Users"]" id="Users" hidden></select> 
                <input class="form-control" readonly value="@ViewData["User"]" />
            </div>
            <div class="form-group">
                <label asp-for="BorrowedDate" class="control-label"></label>
                <input asp-for="BorrowedDate" class="form-control" />
                <span asp-validation-for="BorrowedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnedDate" class="control-label"></label>
                <input asp-for="ReturnedDate" class="form-control" />
                <span asp-validation-for="ReturnedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

