@model BooksManagementSystem.Models.BorrowingViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Book
        </dt>
        <dd class="col-sm-10">
            @ViewData["Book"]
        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @ViewData["User"]
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnedDate)
