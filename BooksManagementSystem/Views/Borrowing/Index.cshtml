@model IEnumerable<BooksManagementSystem.Models.BorrowingViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All borrowings</h1>

<p>
    <a asp-action="Create">Borrow Book</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookViewModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BooksManagementSystemUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookViewModel.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BooksManagementSystemUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
